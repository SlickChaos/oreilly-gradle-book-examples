 pipeline {
    agent any
	
	environment {
        EMAIL_RECIPIENTS = 'auto.build.king@gmail.com'
    }
	
    triggers {
        pollSCM('*/5 * * * *')
    }

    stages {
		stage('Stage_1_Build') {
            steps {
                dir('web-hello-world') {sh './gradlew clean build'}
            }
            post {
                always {
					dir("web-hello-world") {
						sh "pwd"
					}
                    junit '**/build/test-results/test/TEST-*.xml'
                }
            }
        }
		stage('Stage_2_WarFile') {
            steps {
                dir('web-hello-world') {sh './gradlew '}
            }
		}
	}
	
    post {
        failure {
            sendEmail("Failed");
        }
    }
	
//	def sendEmail(status) {
